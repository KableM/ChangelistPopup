<idea-plugin url="https://github.com/KableM/ChangelistPopup">
  <id>com.kablemonck.idea.plugins.ChangeListPopup</id>
  <name>Changelist Popup</name>
  <version>1.0.0</version>
  <vendor email="kable.monck@gmail.com">Kable Monck</vendor>

  <description><![CDATA[
      A popup to quickly switch, edit and remove version control changelists.<br>
      Activate via the default keyboard shortcut <b>control + alt + F3</b> (Mac: <b>command + option + F3</b>)
    ]]></description>

  <change-notes><![CDATA[
      <b>1.0.1</b><br>
      New Changelist option<br>
      Edit and remove changelists<br>
      <br>
      <b>1.0.0</b><br>
      Added the main change list switcher action<br>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.vcs</depends>

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action class="com.kablemonck.idea.plugins.changelistpopup.ChangeListPopupAction"
            text="Changelists"
            description="Popup to add, edit and remove version control changelists">
      <keyboard-shortcut keymap="$default" first-keystroke="control alt F3"/>
      <keyboard-shortcut keymap="Mac OS X 10.5+" first-keystroke="meta alt F3" replace-all="true"/>
    </action>
  </actions>

</idea-plugin>